@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h2>角色列表</h2>

<hr />
<a asp-action="Create" class="btn btn-primary btn-sm">创建角色</a>

<div class="row">
    <div class="col-md-4">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(m => m.Name) </th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => role.Name) </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@role.Id" class="delete-item">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

